            <div class = "layer1Container">
                <div class = "greetings">
                    <h2>¿Que idioma te gustaría aprender?</h2>
                </div>
                <div class = "paises">
                        <div class="card"><img class ="imagenes-paises" src="/images/banderas-españa.png"></div>
                        <div class="card"><img class ="imagenes-paises" src="/images/banderas-inglaterra.png"></div>
                        <div class="card"><img class ="imagenes-paises" src="/images/banderas-italia.png"></div>
                        <div class="card"><img class ="imagenes-paises" src="/images/banderas-brasil.png"></div>
                </div>
            </div>
        </div>

        <div class = "layer2">
            <div class = "layer2Bg">
                <div class = "layer2Content">
                    <div class = "layer2Heading">
                        <h2>Elegí lo que mas te convenga!</h2>
                    </div>
                    <div class = "layer2Info">
                        <div class = "layerFiltros">
                            <div class="layer-idiomas">
                                <button type = "button" class="cardFiltros1"> Idiomas <i class="fas fa-caret-down"></i></button> 
                                <div class="filtro-idiomas-formulario">
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="español" id="español" class="input-control">
                                        <label for="español"> Español </label>  
                                    </div>    
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="ingles" id="ingles" class="input-control">
                                        <label for="ingles"> Ingles </label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="portugues" id="portugues" class="input-control">
                                        <label for="portugues"> Portugués </label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="italiano" id="italiano" class="input-control">
                                        <label for="italiano"> Italiano </label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="aleman" id="aleman" class="input-control">
                                        <label for="aleman"> Aleman </label>  
                                    </div>
                                </div>  
                            </div> 
                            <div class="layer-temas">
                                <button type = "button" class="cardFiltros2">Temas de interes <i class="fas fa-caret-down"></i></button>
                                <div class="filtro-temas-interes-formulario">
                                    <div class="form-group">
                                        <input type="checkbox" name="temas-interes" value="cultura" id="cultura" class="input-control">
                                        <label for="cultura" >Cultura</label>  
                                    </div>    
                                    <div class="form-group">
                                        <input type="checkbox" name="temas-interes" value="noticias" id="noticias" class="input-control">
                                        <label for="noticias" >Noticias</label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="temas-interes" value="deportes" id="deportes" class="input-control">
                                        <label for="deportes" >Deportes</label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="temas-interes" value="culinaria" id="culinaria" class="input-control">
                                        <label for="culinaria" >Culinaria</label>  
                                    </div>
                                </div>
                            </div>    
                            <div class="layer-profesiones">
                                <button type = "button" class="cardFiltros3">Profesiones <i class="fas fa-caret-down"></i></button>
                                <div class="filtro-profesiones-formulario">
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="español" id="español" class="input-control">
                                        <label for="español" >Abogado</label>  
                                    </div>    
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="ingles" id="ingles" class="input-control">
                                        <label for="ingles" >Administrador</label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="portugues" id="portugues" class="input-control">
                                        <label for="portugues" >Contador</label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="italiano" id="italiano" class="input-control">
                                        <label for="italiano" >Ingeniero</label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="aleman" id="aleman" class="input-control">
                                        <label for="aleman" >Musico</label>  
                                    </div>
                                </div> 
                            </div>        
                            <div class="layer-conversacion">
                                <button type = "button" class="cardFiltros5">Conversaciones <i class="fas fa-caret-down"></i></button>
                                <div class="filtro-conversacion-formulario">
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="español" id="español" class="input-control">
                                        <label for="español" >Español</label>  
                                    </div>    
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="ingles" id="ingles" class="input-control">
                                        <label for="ingles" >Ingles</label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="portugues" id="portugues" class="input-control">
                                        <label for="portugues" >Portugués</label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="italiano" id="italiano" class="input-control">
                                        <label for="italiano" >Italiano</label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="aleman" id="aleman" class="input-control">
                                        <label for="aleman" >Aleman</label>  
                                    </div>
                                </div> 
                            </div>
                            <div class="layer-match">
                                <button type = "button" class="cardFiltros6">Match date <i class="fas fa-caret-down"></i></button>
                                <div class="filtro-match-formulario">
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="español" id="español" class="input-control">
                                        <label for="español" >Museos</label>  
                                    </div>    
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="ingles" id="ingles" class="input-control">
                                        <label for="ingles" >Rumba</label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="portugues" id="portugues" class="input-control">
                                        <label for="portugues" >Cena</label>  
                                    </div>
                                    <div class="form-group">
                                        <input type="checkbox" name="idiomas" value="italiano" id="italiano" class="input-control">
                                        <label for="italiano" >Compartir</label>  
                                    </div>
                                </div> 
                            </div>  
                        </div>
                        <div class = "layer2InfoContainer">
                          <% profesores.forEach(function(profesor) { %>
                              <div class = "profeContainer">
                                <img class = "profeImage" src = "/images/<%=profesor.image %>">
                                <div class="puntuacion">
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="fas fa-star"></i>
                                    <i class="far fa-star"></i>
                                    <i class="far fa-star"></i>
                                </div>
                                <div class = "footer-profesor">
                                    <button class = "footer-profesor"><%= profesor.name %> </button>
                                </div>
                            </div>
                          <% }) %>
                        </div>
                    </div>
                </div>
            </div>

        <div class = "layer3">
            <section id="sectionServicios" onload="reset()">
                <h2>Nuestros Servicios</h2>
          
                <div class="serviceContainer">
                  <button class="preBtn">
                    <i class="fas fa-chevron-left"></i>
                  </button>
                  <button class="nxtBtn">
                    <i class="fas fa-chevron-right"></i>
                  </button>
                  <% servicios.forEach(function(servicio){ %>
                    <!-- card 1 -->
                    <div class="serviceCard">
                      <div class="serviceImg">
                        <span class="discountTag">$ <%=servicio.price %></span>
                        <i class="fas fa-comments"></i>
                        <h4><%=servicio.name %></h4>
                        <p class="description"><%=servicio.description %></p>
                      </div>
                      <div class="serviceInfo">
                        <button>
                          <i class="fas fa-shopping-cart"></i>
                          Agregar al carrito
                        </button>
                      </div>
                    </div>
                  <% }) %>
                </div>
              </section>
        </div>

        <div class = "layer4">
            <section id="sectionServicios" onload="reset()">
                <h2>Recomendados para ti</h2>
                <div class="serviceContainer">
                  <button class="preBtn">
                    <i class="fas fa-chevron-left"></i>
                  </button>
                  <button class="nxtBtn">
                    <i class="fas fa-chevron-right"></i>
                  </button>
                  <!-- card 1 -->
                    <% serviciosRecomendados.forEach(function(servicio){ %>
                      <!-- card 1 -->
                      <div class="serviceCard">
                        <div class="serviceImg">
                          <span class="discountTag">$ <%=servicio.price %></span>
                          <i class="fas fa-comments"></i>
                          <h4><%=servicio.name %></h4>
                          <p class="description"><%=servicio.description %></p>
                        </div>
                        <div class="serviceInfo">
                          <button>
                            <i class="fas fa-shopping-cart"></i>
                            Agregar al carrito
                          </button>
                        </div>
                      </div>
                    <% }) %>
                </div>
              </section>
              <section id="sectionServicios" onload="reset()">
                <h2>Los mas vendidos</h2>
                <div class="serviceContainer">
                  <button class="preBtn">
                    <i class="fas fa-chevron-left"></i>
                  </button>
                  <button class="nxtBtn">
                    <i class="fas fa-chevron-right"></i>
                  </button>
                  <!-- card 1 -->
                    <% serviciosMasVendidos.forEach(function(servicio){ %>
