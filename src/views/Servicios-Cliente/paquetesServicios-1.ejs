                          <p class="description"><%=servicio.description %></p>
                        </div>
                        <div class="serviceInfo">
                          <button>
                            <i class="fas fa-shopping-cart"></i>
                            Agregar al carrito
                          </button>
                        </div>
                      </div>
                    <% }) %> 
                </div>
