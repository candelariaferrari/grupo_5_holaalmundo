<!-- CARRITO DE COMPRAS -->

<!DOCTYPE html>

<html lang="en">

<head>
       <meta charset="UTF-8">
       <meta http-equiv="X-UA-Compatible" content="IE=edge">
       <meta name="viewport" content="width=device-width, initial-scale=1.0">
       <title> Carrito De Compras </title>
       <script src="https://kit.fontawesome.com/3964fc737d.js" crossorigin="anonymous"></script>
       <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
       <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
             rel="stylesheet">
       <link href="/css/normalize.css" rel="stylesheet">
       <link href="/css/carritoCompras.css" rel="stylesheet">
       <link rel="stylesheet" href="/css/partialsCss/partials.css" />
</head>

<body>

 <%- include('../partials/header.ejs')%>

 <main>
      
 <section id="contentSlide">
        
          <div class="layer1">

               <h2 class="mi-compra-container"> Mi compra </h2>

               <div class="info-compra-container">
            
                    <div class="left">
              
                         <div class="header-left">
                              <div class="info"> Nombre del paquete </div>
                              <div class="info"> Cantidad </div>
                              <div class="info"> Precio </div>
                         </div>

                         <div class="footer-left">
                              <div class="info"> Paquete </div>
                              <div class="info"> 1 </div>
                              <div class="info"> $5000 </div>
                              <div class="info"> <i class="fas fa-trash-alt"> </i> </div>
                         </div>

                    </div>

                    <div class="right">
              
                         <div class="header-right">
                              <div class="info"> Subtotal </div>
                              <div class="info"> $5000 </div>
                         </div>

                         <div class="body-right">
                              <div class="info"> Código de descuento </div>
                              <div class="info"> ABC123 </div>
                         </div>

                         <div class="footer-right">
                              <div class="info"> TOTAL </div>
                              <div class="info"> $4000 </div>
                         </div>

                    </div>

               </div>

               <div class="button-comprar"> <button> Comprar </button> </div>

          </div>

 </section>

 <section id="bkgCuerpo">

          <div class="layer2">
          
               <h2 class="login"> Login </h2>

               <div class="contenedorFoto">

                    <div class="flexCargar">
                         <div class="cargar"> <i class="fab fa-google"> </i> <p> Gmail </p> </div>
                         <div class="cargar"> <i class="fab fa-facebook-f"> </i> <p> Facebook </p> </div>
                    </div>

               </div>

               <form action="#" method="POST" class="info-container">

                     <div class="head-conteiner-left">

                          <div class="campos">
                               <label for="name"></label>
                               <input type="text" name="name" placeholder="Nombre" class="form-control">
                          </div>

                          <div class="campos">
                               <label for="email"></label>
                               <input type="text" name="email" placeholder="Email" class="form-control">
                          </div>

                     </div>

                     <div class="head-conteiner-right">

                          <div class="campos">
                               <label for="apellido"></label>
                               <input type="text" name="apellido" placeholder="Apellido" class="form-control">
                          </div>

                          <div class="campos">
                               <label for="celular"></label>
                               <input type="text" name="celular" placeholder="Celular" class="form-control">
                          </div>

                     </div>

               </form>

               <div class="texto-metodo-pago"> Métodos de pago </div>

                    <div class="metodo-pago">
                         <div class="pagos"> Tarjeta Crédito </div>
                         <div class="pagos"> Tarjeta Débito </div>
                         <div class="pagos"> Mercado Pago </div>
                    </div>

                    <form action="#" method="POST" class="info-container">

                          <div class="head-conteiner-left">

                               <div class="campos"> <label for="numero"> </label>
                                    <input type="text" name="numero" placeholder="Número" class="form-control">
                               </div>

                               <div class="campos"> <label for="cuotas"> </label>
                                    
                                    <select name="" id="" class="form-control">
                                    <option value="1"> 1 </option>
                                    <option value="6"> 6 </option>
                                    <option value="12"> 12 </option>
                                    </select>

                               </div>

                               <div class="campos"> <label for="vencimiento"> </label>
                                    <input type="date" name="vencimiento" placeholder="Fecha de Vencimiento" class="form-control">
                               </div>

                               <div class="campos"> <label for="DNI"> </label> 
                                    <input type="text" name="DNI" placeholder="DNI del titular" class="form-control">
                               </div>

                          </div>

                          <div class="head-conteiner-right">

                               <div class="campos">
                                    <label for="tarjeta"> 
                                    <input type="text" name="tarjeta" placeholder="Número de la tarjeta" class="form-control">
                                    </label>
                               </div>

                               <div class="campos">
                                    <label for="nombre">
                                    <input type="text" name="nombre" placeholder="Nombre y Apellido del titular" class="form-control">
                                    </label>
                               </div>

                               <div class="campos">
                                    <label for="codigo">
                                    <input type="text" name="codigo" placeholder="Código de Seguridad" class="form-control">
                                    </label>
                               </div>

                          </div>

                    </form>

                    <div class="button"> <button> Pagar </button> </div>

          </div>

 </section>

 </main>

 <div id="contentChat" class="desactivado">
      <svg class="svgimg" width="100" height="100" viewBox="0 0 149 153" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M18.625 0.549561C13.6853 0.549561 8.948 2.63128 5.45514 6.33677C1.96227 10.0423 0 15.068 0 20.3083L0 99.3435C0 104.584 1.96227 109.61 5.45514 113.315C8.948 117.021 13.6853 119.102 18.625 119.102H41.9062C43.352 119.102 44.7778 119.459 46.0709 120.145C47.364 120.831 48.4888 121.827 49.3563 123.054L67.05 148.079C67.9174 149.305 69.0422 150.301 70.3353 150.987C71.6284 151.673 73.0543 152.03 74.5 152.03C75.9457 152.03 77.3716 151.673 78.6647 150.987C79.9578 150.301 81.0826 149.305 81.95 148.079L99.6437 123.054C100.511 121.827 101.636 120.831 102.929 120.145C104.222 119.459 105.648 119.102 107.094 119.102H130.375C135.315 119.102 140.052 117.021 143.545 113.315C147.038 109.61 149 104.584 149 99.3435V20.3083C149 15.068 147.038 10.0423 143.545 6.33677C140.052 2.63128 135.315 0.549561 130.375 0.549561L18.625 0.549561Z"
            fill="#212121" border="1px solid #00ffcb" />
      </svg>
      <p> Chat </p>
 </div>

 <%- include('../partials/chat.ejs')%>

 <%- include('../partials/footer.ejs')%>

 <script src="/js/scriptHeader.js"> </script>

</body>

</html>
