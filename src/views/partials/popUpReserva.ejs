<script>
  var btnFiltroReserva = document.getElementsByClassName("btnFiltroReserva");
  var i;

  for (i = 0; i < btnFiltroReserva.length; i++) {
    btnFiltroReserva[i].addEventListener("click", function () {
      this.classList.toggle("active");
      var check = this.nextElementSibling;
      if (check.style.maxHeight) {
        check.style.maxHeight = null;
      } else {
        check.style.maxHeight = check.scrollHeight + "px";
      }
    });
  }
</script>