                <div> <input type="checkbox" name="temas-interes" value="culinaria" id="cultura"> <p> Cocina </p> </div>
                <div> <input type="checkbox" name="temas-interes" value="naturaleza" id="cultura"> <p> Naturaleza </p> </div>
                <div> <input type="checkbox" name="temas-interes" value="musica" id="cultura"> <p> Música </p> </div>
                </div>

                <button class="btnFiltro"> Días <i class="fas fa-angle-down"> </i> </button>
                
