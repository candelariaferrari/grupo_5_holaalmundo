<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Profesores Hola al Mundo</title>
  <script src="https://kit.fontawesome.com/3964fc737d.js" crossorigin="anonymous"></script>
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet" />
  <link href="/css/style.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/partialsCss/partials.css" />
  <script src="/js/validationConfigTeachers.js"></script>
</head>

<body>
  <!-- Header -->
  <%- include('../partials/header.ejs')%>
    <section class="containerBody" style="background-color: white !important">

      <div class="flexPersonal">

        <h1> Configuraci√≥n </h1>

        <form method="POST" action="/teachers/configuration/<%= userLogged.id %>/?_method=PUT" name="form" class="formulario" id="config-teachers">

          <input class="input-form disabled" placeholder="Nombre" type="text" name="name"
           value="<%= userLogged.name %>" >
         
          <input class="input-form disabled" placeholder="Apellido" type="text" name="last_name"
           value="<%= userLogged.last_name %>" >

          <input class="input-form" placeholder="Celular" type="text" name="phone" id="phoneTeacher"
          <%= locals.errors && errors.phone ? "is-invalid" : null %>
           value="<%= userLogged.phone %>" >
          <% if(locals.errors && errors.phone) { %>
            <div class="msgError">
              <%= errors.phone.msg %>
            </div>
          <% } %>

          <input class="input-form disabled" 
           value="<%= userLogged.email %>" disabled>

          <input class="input-form disabled" 
           value="********">

          <input class="input-form disabled" 
           value="Profesor" disabled> 

          <% if(userLogged.user_sex_fk == 1) { %>
            <input class="input-form disabled" value="Masculino" disabled>
          <% } else { %> 
            <input class="input-form disabled" value="Femenino" disabled>
          <% } %>

          <div class="subir">
            <input type="file" name="avatar" id="nuestroInputTeacher" class="inputSubir" onchange="return imageValidation()"
            <%= locals.errors && errors.avatar ? "is-invalid" : null %>
             value="<%= locals.oldData ? oldData.avatar : null %>" >
            <% if(locals.errors && errors.avatar) { %>
             <div class="msgError">
              <%= errors.avatar.msg %>
             </div>
            <% } %>
          </div>

        </div>

      </div>

        <div class="contenedorBtn"> 
          <button type="submit" class="reg"> Guardar </button>
          <button type="submit" class="cancelar"> Cancelar </button>
        </div>

      <div class="contenedorBtn"> 
        <button type="submit" class="reg"> Guardar </button>
        <button type="submit" class="cancelar"> Cancelar </button>
      </div>

        </form>

      </div>

      </form>

    </div>

  </section>
    <!-- Footer -->
    <%- include('../partials/footer.ejs')%>
      <script src="/js/scriptHeader.js"></script>
</body>

</html>
