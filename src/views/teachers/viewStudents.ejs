<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Mis alumnos</title>
  <script src="https://kit.fontawesome.com/3964fc737d.js" crossorigin="anonymous"></script>
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
    rel="stylesheet">
  <link href="/css/normalize.css" rel="stylesheet">
  <link href="/css/style.css" rel="stylesheet">
  <link href="/css/partialsCss/partials.css" rel="stylesheet">

</head>

<body>
  <%- include('../partials/header.ejs')%>
    <!-- Slide principal -->
    <section class="contentSlide blue" id="elementId">
      <div class="titulo">
        <h2>Mis alumnos</h2>
      </div>
      <form action="/teachers/students" method="GET">
        <div class="flexInput">
          <div class="viewStudent">
            <select name="buscarCurso" class="input-select">
              <option disabled selected> Seleccionar Curso</option>
              <% allClass.forEach(clase=> { %>
                <option value="<%= clase.id %>">
                  <%= locals.oldData && (clase.language===oldData.clase) ? "select" : null %>
                    <%= `${clase.language}` %>
                </option>
                <% }) %>
            </select>
          </div>
          <div class="viewStudent">
            <input type="search" name="buscarAlumno" placeholder="Buscar alumno ..." class="input-form">
          </div>
        </div>
        <div class="contBtn">
          <button id="filtrar" class="btn filtrar" type="submit">Buscar</button>
        </div>
        
      </form>
    </section>
    <section class="black bodyViewStudents" id="elementId">
      <div class="onda3">
      </div>
      <div class="containerProfes">
        <% if(filterAlumnos.length> 0) { %>
          <% filterAlumnos.forEach(function(alumno){ %>
            <div class="contenedorImg">
              <div class="borde">
                <div class="hovereffect">
                  <div class="start">
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="fas fa-star"></i>
                    <i class="far fa-star"></i>
                    <i class="far fa-star"></i>
                  </div>
                  <img class="img-responsive" src="/images/profeDos.png" alt="<%=alumno.name %>" />
                  <div class="overlay">
                    <a href="/teachers/students/<%=alumno.id%>" id="myBtn" class="reservar">Conocer</a>
                  </div>
                </div>
              </div>
              <p class="nombre">
                <%=alumno.name + " " + alumno.last_name%>
              </p>
            </div>
            <% }) %>
              <% } %>
      </div>

    </section>

    <!-- Footer -->
    <%- include('../partials/footer.ejs')%>
      <script src="/js/scriptHeader.js"></script>
      
</body>

</html>