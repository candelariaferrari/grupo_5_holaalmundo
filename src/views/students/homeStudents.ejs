<body id="alumnos">
  <%- include('../partials/header.ejs')%>
    <main>
      <!-- Slide principal -->
      <section id="slideProfes">
        <div class="contenedorSlide">
          <h1> ¿Cómo comenzar? </h1>
          <div class="flexSlide">
            <div>
              <h2> 1. Configurá tu perfil </h2>
            </div>
            <div>
              <h2>2. Elegí el idioma</h2>
            </div>
          </div>

        </div>
      </section>

      <!-- Seccion profesores -->
      <section id="profesores">
        <div class="section-profesores">
          <div class="title-profesores">
            <h2>Nuestros Profes</h2>
          </div>
          <!-- grilla -->
          <div class="content-right">
            <div class="container-teacher">
              <div class="g-uno">
                <img src="/images/profe.png" alt="profe" />
              </div>
              <div class="g-dos">
                <img src="/images/profe.png" alt="profe" />
              </div>
              <div class="g-tres">
                <img src="/images/profe.png" alt="profe" />
              </div>
              <div class="g-cuatro">
                <img src="/images/profe.png" alt="profe" />
              </div>
              <div class="g-cinco">
                <img src="/images/profe.png" alt="profe" />
              </div>
              <div class="g-seis">
                <img src="/images/profe.png" alt="profe" />
              </div>
              <div class="g-siete">
                <img src="/images/profe.png" alt="profe" />
              </div>
              <div class="g-ocho">
                <img src="/images/profe.png" alt="profe" />
              </div>
              <div class="boton-mas">
                <button>Ver más</button>
              </div>

              <div class="est" id="section-estadisticas">
                <div class="title-estadisticas">
                  <h2>Hola al Mundo cuenta con </h2>
                </div>
                <div class="cantidades">
                  <div>
                    <p class="number">
                      <%=profesores.length %>
                    </p>
                    <p class="text">Profesores</p>
                  </div>
                  <div>
                    <p class="number">+ 5000 </p>
                    <p class="text">Alumnos</p>
                  </div>
                  <div>
                    <p class="number"> <%= cantidadTemas.length %> </p>
                    <p class="text">Temáticas</p>
                  </div>
                  <div>
                    <p class="number"> <%=cantidadIdiomas.length%> </p>
                    <p class="text">Idiomas</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Sección servicios -->
      <section id="sectionServicios" onload="reset()">
        <h2>Nuestros Cursos</h2>

        <div class="serviceContainer">
          <button class="preBtn">
            <i class="fas fa-chevron-left"></i>
          </button>
          <button class="nxtBtn">
            <i class="fas fa-chevron-right"></i>
          </button>
          <% servicios.forEach(function(servicio){ %>
            <!-- card 1 -->
            <div class="serviceCard">
              <div class="serviceImg">
                <span class="discountTag">$ <%=servicio.price %></span>
                <i class="fas fa-comments"></i>
                <h4>
                  <%=servicio.language %>
                </h4>
                <p class="description">
                  <%=servicio.description %>
                </p>
              </div>
              <div class="serviceInfo">
                <button>
                  <i class="fas fa-shopping-cart"></i>
                  Agregar al carrito
                </button>
              </div>
            </div>
            <% }) %>
        </div>
      </section>

     
          <% serviciosRecomendados.forEach(function(servicio){ %>
            <section id="sectionServicios" onload="reset()">
              <h2>Recomendados para ti</h2>
              <div class="serviceContainer">
                <button class="preBtn">
                  <i class="fas fa-chevron-left"></i>
                </button>
                <button class="nxtBtn">
                  <i class="fas fa-chevron-right"></i>
                </button>
            <!-- card 1 -->
            <div class="serviceCard">
              <div class="serviceImg">
                <span class="discountTag">$ <%=servicio.price %></span>
                <i class="fas fa-comments"></i>
                <h4>
                  <%=servicio.language %>
                </h4>
                <p class="description">
                  <%=servicio.description %>
                </p>
              </div>
              <div class="serviceInfo">
                <button>
                  <i class="fas fa-shopping-cart"></i>
                  Agregar al carrito
                </button>
              </div>
            </div>
          </div>
        </section>
            <% }) %>
       

      <section id="sectionServicios" onload="reset()">
        <h2>Los mas vendidos</h2>
        <div class="serviceContainer">
          <button class="preBtn">
            <i class="fas fa-chevron-left"></i>
          </button>
          <button class="nxtBtn">
            <i class="fas fa-chevron-right"></i>
          </button>
          <% serviciosMasVendidos.forEach(function(servicio){ %>
            <!-- card 1 -->
            <div class="serviceCard">
              <div class="serviceImg">
                <span class="discountTag">$ <%=servicio.price %></span>
                <i class="fas fa-comments"></i>
                <h4>
                  <%=servicio.language %>
                </h4>
                <p class="description">
                  <%=servicio.description %>
                </p>
              </div>
              <div class="serviceInfo">
                <button>
                  <i class="fas fa-shopping-cart"></i>
                  Agregar al carrito
                </button>
              </div>
            </div>
            <% }) %>
        </div>
      </section>
