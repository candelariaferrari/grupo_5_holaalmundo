<!-- INICIO ESTUDIANTES -->

<!DOCTYPE html>

<html lang="en">

<head>
       <meta charset="UTF-8" />
       <meta http-equiv="X-UA-Compatible" content="IE=edge" />
       <meta name="viewport" content="width=device-width, initial-scale=1.0" />
       <title> Inicio </title>
       <script src="https://kit.fontawesome.com/3964fc737d.js" crossorigin="anonymous"></script>
       <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
       <link rel="preconnect" href="https://fonts.googleapis.com" />
       <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
       <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet" />
       <link href="/css/normalize.css" rel="stylesheet" />
       <link href="/css/InicioLogged.css" rel="stylesheet" />
       <link rel="stylesheet" href="/css/partialsCss/partials.css" />
</head>

<body id="alumnos">

 <%- include('../partials/header.ejs')%>

 <main>

 <section id="slideProfes">

          <div class="contenedorSlide">

               <h1> ¿Cómo comenzar? </h1>

               <div class="flexSlide">
                    <div> <h2> 1. Configurá tu perfil </h2> </div>
                    <div> <h2> 2. Elegí el idioma </h2> </div>
               </div>

          </div>

 </section>

 <section id="profesores">

          <div class="section-profesores">
          
               <div class="title-profesores"> <h2> Nuestros Profesores </h2> </div>
         
               <div class="content-right">
            
                    <div class="container-teacher">
              
                         <div class="g-uno"> <img src="/images/profe.png" alt="profe" /> </div>
                         <div class="g-dos"> <img src="/images/profe.png" alt="profe" /> </div>
                         <div class="g-tres"> <img src="/images/profe.png" alt="profe" /> </div>
                         <div class="g-cuatro"> <img src="/images/profe.png" alt="profe" /> </div>
                         <div class="g-cinco"> <img src="/images/profe.png" alt="profe" /> </div>
                         <div class="g-seis"> <img src="/images/profe.png" alt="profe" /> </div>
                         <div class="g-siete"> <img src="/images/profe.png" alt="profe" /> </div>
                         <div class="g-ocho"> <img src="/images/profe.png" alt="profe" /> </div>
                         
                         <div class="boton-mas"> <button> Ver más </button> </div>

                         <div class="est" id="section-estadisticas">
                
                              <div class="title-estadisticas"> <h2> Hola al Mundo cuenta con: </h2> </div>
                
                              <div class="cantidades">
                                   
                                   <div> 
                                        <p class="number"> <%= profesores.length %> </p>
                                        <p class="text"> Profesores </p>
                                   </div>
                  
                                   <div>
                                        <p class="number"> <%= estudiantes.length %> </p>
                                        <p class="text"> Alumnos </p>
                                   </div>
                  
                                   <div>
                                        <p class="number"> <%= cantidadTemas.length %> </p>
                                        <p class="text"> Temáticas </p>
                                   </div>
                                  
                                   <div>
                                        <p class="number"> <%= cantidadIdiomas.length %> </p>
                                        <p class="text"> Idiomas </p>
                                   </div>

                              </div>

                         </div>

                    </div>

               </div>

          </div>

 </section>

 <section id="sectionServicios" onload="reset()">
        
          <h2> Nuestros Servicios </h2>

          <div class="serviceContainer"> 
               <button class="preBtn"> <i class="fas fa-chevron-left"> </i> </button>
               <button class="nxtBtn"> <i class="fas fa-chevron-right"> </i> </button>

               <% servicios.forEach(function(servicio){ %>
          
               <div class="serviceCard">
               
                    <div class="serviceImg">
                         <span class="discountTag">$ <%= servicio.price %> </span>
                         <i class="fas fa-comments"></i>
                         <h4> <%= servicio.name %> </h4>
                         <p class="description"> <%= servicio.description %> </p>
                    </div>

                    <div class="serviceInfo"> <button> <i class="fas fa-shopping-cart"> </i> Agregar al carrito </button> </div>
            
               </div>

               <% }) %>
        
          </div>

 </section>

 <section id="sectionServicios" onload="reset()">

          <h2> Recomendados para ti </h2>
          
          <div class="serviceContainer">
               <button class="preBtn"> <i class="fas fa-chevron-left"> </i> </button>
               <button class="nxtBtn"> <i class="fas fa-chevron-right"> </i> </button>

               <% serviciosRecomendados.forEach(function(servicio){ %>

               <div class="serviceCard">
              
                    <div class="serviceImg">
                         <span class="discountTag">$ <%=servicio.price %> </span>
                         <i class="fas fa-comments"></i>
                         <h4> <%= servicio.name %> </h4>
                         <p class="description"> <%= servicio.description %> </p>
                    </div>

                    <div class="serviceInfo"> <button> <i class="fas fa-shopping-cart"> </i> Agregar al carrito </button> </div>

               </div>

               <% }) %>

          </div>

 </section>

 <section id="sectionServicios" onload="reset()">
          
          <h2> Los más vendidos </h2>

          <div class="serviceContainer">
               <button class="preBtn"> <i class="fas fa-chevron-left"> </i> </button>
               <button class="nxtBtn"> <i class="fas fa-chevron-right"> </i> </button>
               
               <% serviciosMasVendidos.forEach(function(servicio){ %>
          
               <div class="serviceCard">

                    <div class="serviceImg">
                         <span class="discountTag">$ <%= servicio.price %> </span>
                         <i class="fas fa-comments"></i>
                         <h4> <%= servicio.name %> </h4>
                         <p class="description"> <%= servicio.description %> </p>
                    </div>

                    <div class="serviceInfo"> <button> <i class="fas fa-shopping-cart"> </i> Agregar al carrito </button> </div>
            
               </div>

               <% }) %>

          </div>

 </section>

 <section class="idiomas">

          <div class="paises">
          
               <div class="card"> <img class="imagenes-paises" src="/images/banderas-españa.png" /> </div>
               <div class="card"> <img class="imagenes-paises" src="/images/banderas-inglaterra.png" /> </div>
               <div class="card"> <img class="imagenes-paises" src="/images/banderas-italia.png" /> </div>
               <div class="card"> <img class="imagenes-paises" src="/images/banderas-brasil.png" /> </div>
          </div>

          <div class="label"> <div> ¿Qué idioma te gustaría aprender? </div> </div>

 </section>

 <%- include('../partials/contact.ejs')%>

 </main>

 <%- include('../partials/chat.ejs')%>

 <%- include('../partials/footer.ejs')%>

 <script src="/js/scriptHeader.js"> </script>

 <script src="/js/scriptCarrusel.js"> </script>

</body>

</html>
