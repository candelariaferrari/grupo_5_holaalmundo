      </section> -->

      <!-- section Contacto -->
      <%- include('../partials/contact.ejs')%>
    </main>
    
    <!-- Footer -->
    <%- include('../partials/footer.ejs')%>
    <script src="/js/scriptHeader.js"></script>
    <script src="/js/scriptPreviewCart.js"></script>
