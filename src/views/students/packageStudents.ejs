                    </div>
                    <div>
                      <input type="checkbox" name="idiomas" value="portugues" id="portugues">
                      <label for="portugues">Portugués</label>
                    </div>
                    <div>
                      <input type="checkbox" name="idiomas" value="italiano" id="italiano">
                      <label for="italiano">Italiano</label>
                    </div>
                  </div>
                  <button class="btnFiltro">Match date <i class="fas fa-angle-down"></i></button>
                  <div class="check">
                    <div>
                      <input type="checkbox" name="idiomas" value="español" id="español">
                      <label for="español">Museos</label>
                    </div>
                    <div>
                      <input type="checkbox" name="idiomas" value="ingles" id="ingles">
                      <label for="ingles">Rumba</label>
                    </div>
                    <div>
                      <input type="checkbox" name="idiomas" value="portugues" id="portugues">
                      <label for="portugues">Cena</label>
                    </div>
                    <div>
                      <input type="checkbox" name="idiomas" value="italiano" id="italiano">
                      <label for="italiano">Compartir</label>
                    </div>
                  </div>
                </div>
              </div>
              <div class="layer2InfoContainer">
                <% profesores.forEach(function(profesor) { %>
                  <div class="profeContainer">
                    <img class="profeImage" src="/images/<%=profesor.image %>">
                    <div class="puntuacion">
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="fas fa-star"></i>
                      <i class="far fa-star"></i>
                      <i class="far fa-star"></i>
                    </div>
                    <div class="footer-profesor">
                      <button class="footer-profesor">
                        <%= profesor.name %>
                      </button>
                    </div>
                  </div>
                  <% }) %>
              </div>
            </div>
          </div>
        </div>

        <div class="layer3">
          <section id="sectionServicios" onload="reset()">
            <h2>Nuestros Servicios</h2>

            <div class="serviceContainer">
              <button class="preBtn">
                <i class="fas fa-chevron-left"></i>
              </button>
              <button class="nxtBtn">
                <i class="fas fa-chevron-right"></i>
              </button>
              <% servicios.forEach(function(servicio){ %>
                <!-- card 1 -->
                <div class="serviceCard">
                  <div class="serviceImg">
                    <span class="discountTag">$ <%=servicio.price %></span>
                    <i class="fas fa-comments"></i>
                    <h4>
                      <%=servicio.name %>
                    </h4>
                    <p class="description">
                      <%=servicio.description %>
                    </p>
                  </div>
                  <div class="serviceInfo">
                    <button>
                      <i class="fas fa-shopping-cart"></i>
                      Agregar al carrito
                    </button>
                  </div>
                </div>
                <% }) %>
            </div>
          </section>
        </div>

        <div class="layer4">
          <section id="sectionServicios" onload="reset()">
            <h2>Recomendados para ti</h2>
