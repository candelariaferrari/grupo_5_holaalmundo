    <main>
      <section class="container-filtros">
        <div class="container-header">
          <h2>¿Que idioma te gustaría aprender?</h2>
        </div>
        <div class="paises">
          <div class="card"><img class="imagenes-paises" src="/images/banderas-españa.png"></div>
          <div class="card"><img class="imagenes-paises" src="/images/banderas-inglaterra.png"></div>
          <div class="card"><img class="imagenes-paises" src="/images/banderas-italia.png"></div>
          <div class="card"><img class="imagenes-paises" src="/images/banderas-brasil.png"></div>
        </div>
      </section>

      <div class="layer2">
        <div class="layer2Bg">
          <div class="layer2Content">
            <div class="layer2Heading">
              <h2>Elegí lo que mas te convenga!</h2>
            </div>
            <div class="layer2Info">
              <div class="layerFiltros">
                <div class="containerFiltros">
                  <button class="btnFiltro">Idiomas <i class="fas fa-angle-down"></i></button>
                  <div class="check">
                    <div>
                      <input type="checkbox" name="idiomas" value="español" id="español">
                      <label for="español"> Español </label>
                    </div>
                    <div>
                      <input type="checkbox" name="idiomas" value="ingles" id="ingles">
                      <label for="ingles"> Ingles </label>
                    </div>
                    <div>
                      <input type="checkbox" name="idiomas" value="portugues" id="portugues">
                      <label for="portugues"> Portugués </label>
                    </div>
                    <div>
                      <input type="checkbox" name="idiomas" value="italiano" id="italiano">
                      <label for="italiano"> Italiano </label>
                    </div>
                  </div>
                  <button class="btnFiltro">Temas de interes <i class="fas fa-angle-down"></i></button>
                  <div class="check">
                    <div>
                      <input type="checkbox" name="temas-interes" value="cultura" id="cultura">
                      <label for="cultura">Cultura</label>
                    </div>
                    <div>
                      <input type="checkbox" name="temas-interes" value="noticias" id="noticias">
                      <label for="noticias">Noticias</label>
                    </div>
                    <div>
                      <input type="checkbox" name="temas-interes" value="deportes" id="deportes">
                      <label for="deportes">Deportes</label>
                    </div>
                    <div>
                      <input type="checkbox" name="temas-interes" value="culinaria" id="culinaria">
                      <label for="culinaria">Culinaria</label>
                    </div>
                  </div>
                  <button class="btnFiltro">Profesiones <i class="fas fa-angle-down"></i></button>
                  <div class="check">
                    <div>
                      <input type="checkbox" name="idiomas" value="español" id="español">
                      <label for="español">Abogado</label>
                    </div>
                    <div>
                      <input type="checkbox" name="idiomas" value="ingles" id="ingles">
                      <label for="ingles">Administrador</label>
                    </div>
                    <div>
                      <input type="checkbox" name="idiomas" value="portugues" id="portugues">
